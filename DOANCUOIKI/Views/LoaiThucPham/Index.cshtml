@model IEnumerable<DOANCUOIKI.Models.LoaiThucPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaLoaiTP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenLoaiTP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoaiTP)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiTP)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.MaLoaiTP">Edit</a> |
                <a asp-action="Display" asp-route-id="@item.MaLoaiTP">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaLoaiTP">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
