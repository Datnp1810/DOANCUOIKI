@model DOANCUOIKI.Models.Ban

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bàn số @Model.SoBan</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SLNguoi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SLNguoi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.status)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.status == 1)
            {
                <text>Đã có khách</text>
            }
            else
            {
                <text>Trống</text>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model?.SoBan">Display</a> |
    <a asp-action="Index">Back to List</a>
</div>
